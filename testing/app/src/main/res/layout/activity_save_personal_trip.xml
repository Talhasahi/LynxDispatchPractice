<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:fillViewport="true"
    tools:context=".SavePersonalTrip">


    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:paddingBottom="20dp"
        tools:context=".SavePersonalTrip">


        <Button
            android:id="@+id/backButton_save_personal_trip"
            android:layout_width="30dp"
            android:layout_height="30dp"
            android:layout_marginStart="10dp"
            android:layout_marginTop="10dp"
            android:background="@drawable/ic_baseline_arrow_back_24"
            android:elevation="10dp"
            android:textColor="#FFFFFF"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintHorizontal_bias="0.0"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent" />

        <Button
            android:id="@+id/saveForLater"
            android:layout_width="320dp"
            android:layout_height="45dp"
            android:layout_marginTop="20dp"
            android:background="@drawable/loginbutton"
            android:elevation="10dp"
            android:text="Save For Later"
            android:textColor="#FFFFFF"
            app:layout_constraintEnd_toEndOf="@+id/textInputLayout12"
            app:layout_constraintStart_toStartOf="@+id/textInputLayout12"
            app:layout_constraintTop_toBottomOf="@+id/textInputLayout12" />

        <Button
            android:textSize="13.5dp"
            android:maxLines="1"
            android:id="@+id/startTrip"
            android:layout_width="150dp"
            android:layout_height="45dp"
            android:layout_marginTop="20dp"
            android:background="@drawable/loginbutton"
            android:elevation="10dp"
            android:text="Start Trip"
            android:textColor="#FFFFFF"
            app:layout_constraintBottom_toBottomOf="@+id/make_Trip_live_1"
            app:layout_constraintStart_toStartOf="@+id/saveForLater"
            app:layout_constraintTop_toBottomOf="@+id/saveForLater" />

        <Button
            android:textSize="13.5dp"
            android:maxLines="1"
            android:id="@+id/make_Trip_live_1"
            android:layout_width="150dp"
            android:layout_height="45dp"
            android:layout_marginTop="20dp"
            android:background="@drawable/loginbutton"
            android:elevation="10dp"
            android:text="Make Trip Live"
            android:textColor="#FFFFFF"
            app:layout_constraintEnd_toEndOf="@+id/saveForLater"
            app:layout_constraintTop_toBottomOf="@+id/saveForLater" />

        <com.google.android.material.textfield.TextInputLayout
            android:id="@+id/spinner_vehicle_Dispatcher2"
            style="@style/Widget.MaterialComponents.TextInputLayout.OutlinedBox.Dense.ExposedDropdownMenu"
            android:layout_width="320dp"
            android:layout_height="50dp"
            android:layout_marginTop="20dp"
            app:layout_constraintEnd_toEndOf="@+id/textInputLayout133"
            app:layout_constraintStart_toStartOf="@+id/textInputLayout133"
            app:layout_constraintTop_toBottomOf="@+id/textInputLayout133">

            <AutoCompleteTextView
                android:id="@+id/spinner_vehicle_Dispatcher"
                android:layout_width="320dp"
                android:layout_height="45dp"
                android:filterTouchesWhenObscured="false"
                android:inputType="none" />

        </com.google.android.material.textfield.TextInputLayout>






        <TextView
            android:id="@+id/textView12"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="12dp"
            android:text="Save Personal Trip"
            android:textColor="#000000"
            android:textSize="20dp"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent" />


        <com.google.android.material.textfield.TextInputLayout
            android:id="@+id/textInputLayout"
            style="@style/Widget.MaterialComponents.TextInputLayout.OutlinedBox.Dense"
            android:layout_width="320dp"
            android:layout_height="50dp"
            android:layout_marginTop="24dp"
            android:hint="Name"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/textView12">

            <com.google.android.material.textfield.TextInputEditText
                android:id="@+id/name_save_personal_trip"
                android:layout_width="320dp"
                android:layout_height="45dp"
                android:inputType="textPersonName"
                android:maxLines="1"
                android:padding="10dp" />
        </com.google.android.material.textfield.TextInputLayout>


        <com.google.android.material.textfield.TextInputLayout
            android:id="@+id/textInputLayout133"
            style="@style/Widget.MaterialComponents.TextInputLayout.OutlinedBox.Dense"
            android:layout_width="320dp"
            android:layout_height="50dp"
            android:layout_marginTop="20dp"
            android:hint="Contact No"
            app:layout_constraintEnd_toEndOf="@+id/textInputLayout"
            app:layout_constraintStart_toStartOf="@+id/textInputLayout"
            app:layout_constraintTop_toBottomOf="@+id/textInputLayout">

            <com.google.android.material.textfield.TextInputEditText
                android:inputType="number"
                android:id="@+id/contact_No_save_persoal_trip"
                android:layout_width="320dp"
                android:layout_height="45dp"

                android:maxLines="1"
                android:padding="10dp" />
        </com.google.android.material.textfield.TextInputLayout>


        <com.google.android.material.textfield.TextInputLayout
            android:id="@+id/textInputLayout5"
            style="@style/Widget.MaterialComponents.TextInputLayout.OutlinedBox.Dense"
            android:layout_width="320dp"
            android:layout_height="50dp"
            android:layout_marginEnd="91dp"
            android:hint="Contact No"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent" />


        <com.google.android.material.textfield.TextInputLayout
            app:startIconDrawable="@drawable/ic_baseline_access_alarm_24"
            android:id="@+id/textInputLayout10"
            style="@style/Widget.MaterialComponents.TextInputLayout.OutlinedBox.Dense"
            android:layout_width="320dp"
            android:layout_height="50dp"
            android:layout_marginTop="20dp"
            android:hint="Pickup Time"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/spinner_vehicle_Dispatcher2">

            <com.google.android.material.textfield.TextInputEditText
                android:id="@+id/name_pickup_time_save_personal_trip"
                android:layout_width="320dp"
                android:layout_height="45dp"
                android:clickable="true"
                android:focusableInTouchMode="false"
                android:inputType="none"
                android:maxLines="1"
                android:padding="10dp" />
        </com.google.android.material.textfield.TextInputLayout>


        <com.google.android.material.textfield.TextInputLayout
            app:startIconDrawable="@drawable/ic_baseline_access_alarm_24"
            android:id="@+id/textInputLayout11"
            style="@style/Widget.MaterialComponents.TextInputLayout.OutlinedBox.Dense"
            android:layout_width="320dp"
            android:layout_height="50dp"
            android:layout_marginTop="20dp"
            android:hint="Apt. Time (Optional)"
            app:layout_constraintEnd_toEndOf="@+id/textInputLayout10"
            app:layout_constraintHorizontal_bias="0.505"
            app:layout_constraintStart_toStartOf="@+id/textInputLayout10"
            app:layout_constraintTop_toBottomOf="@+id/textInputLayout10">

            <com.google.android.material.textfield.TextInputEditText
                android:id="@+id/name_apt_time_save_personal_trip"
                android:layout_width="320dp"
                android:layout_height="45dp"
                android:clickable="true"
                android:focusableInTouchMode="false"
                android:inputType="none"
                android:maxLines="1"
                android:padding="10dp" />
        </com.google.android.material.textfield.TextInputLayout>

        <com.google.android.material.textfield.TextInputLayout
            android:id="@+id/textInputLayout12"
            style="@style/Widget.MaterialComponents.TextInputLayout.OutlinedBox.Dense"
            android:layout_width="320dp"
            android:layout_height="150dp"
            android:layout_marginTop="20dp"
            android:gravity="top"
            android:hint="Write dispatcher notes..."
            app:layout_constraintEnd_toEndOf="@+id/textInputLayout11"
            app:layout_constraintStart_toStartOf="@+id/textInputLayout11"
            app:layout_constraintTop_toBottomOf="@+id/textInputLayout11">

            <com.google.android.material.textfield.TextInputEditText
                android:id="@+id/name_note_save_personal_trip"
                android:layout_width="320dp"
                android:layout_height="145dp"
                android:gravity="top"
                android:inputType="text"
                android:maxLines="3"
                android:padding="10dp" />
        </com.google.android.material.textfield.TextInputLayout>


    </androidx.constraintlayout.widget.ConstraintLayout>
</ScrollView>