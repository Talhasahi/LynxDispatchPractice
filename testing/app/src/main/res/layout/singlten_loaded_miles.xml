<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    android:background="@drawable/listview_items_background"
    android:orientation="vertical"
    android:elevation="20dp"
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">
    <TextView
        android:textColor="#000000"
        android:id="@+id/logs"
        android:padding="15dp"

        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Leg A"></TextView>
    <View

        android:layout_width="match_parent"
        android:layout_marginLeft="3dp"
        android:layout_marginRight="3dp"
        android:layout_height="0.5dp"
        android:background="@android:color/darker_gray"/>

    <TextView
        android:textColor="#000000"
        android:id="@+id/pickUpLocation"
        android:layout_marginLeft="10dp"
        android:padding="10dp"
        android:drawablePadding="20dp"
        android:drawableLeft="@drawable/ic_baseline_location_24"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Daska,Panjab"></TextView>
    <LinearLayout
        android:layout_marginLeft="10dp"
        android:padding="10dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <ImageView
            android:src="@drawable/ic_baseline_more_vert_24"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"></ImageView>
        <TextView
            android:textColor="#000000"
            android:textSize="12dp"
            android:paddingLeft="10dp"
            android:paddingRight="10dp"
            android:ellipsize="end"
            android:maxLines="1"
            android:background="@drawable/rounded_corner"
            android:gravity="center"
            android:id="@+id/total_miles"
            android:layout_marginLeft="20dp"
            android:text="332.06"
            android:layout_width="100dp"
            android:layout_height="25dp"></TextView>
        <TextView
            android:textColor="#000000"
            android:textSize="12dp"
            android:paddingLeft="10dp"
            android:paddingRight="10dp"
            android:ellipsize="end"
            android:maxLines="1"
            android:background="@drawable/rounded_corner"
            android:gravity="center"
            android:id="@+id/total_time"
            android:layout_marginLeft="17dp"
            android:text="5 Hr 24"
            android:layout_width="100dp"
            android:layout_height="25dp"></TextView>

    </LinearLayout>
    <TextView
        android:textColor="#000000"
        android:id="@+id/drop_Off_Location"
        android:padding="10dp"
        android:drawablePadding="15dp"
        android:layout_marginLeft="10dp"
        android:drawableLeft="@drawable/ic_outline_assigned_trips_24"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Lahore"></TextView>


</LinearLayout>