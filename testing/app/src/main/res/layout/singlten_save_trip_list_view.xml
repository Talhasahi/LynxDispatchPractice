<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:app="http://schemas.android.com/apk/res-auto"
    android:background="@drawable/listview_items_background"
    android:orientation="vertical"
    android:elevation="20dp"
    xmlns:android="http://schemas.android.com/apk/res/android" android:layout_width="match_parent"

    android:layout_height="wrap_content">
    <androidx.constraintlayout.widget.ConstraintLayout

        android:layout_width="match_parent"
        android:layout_height="wrap_content"
>

        <TextView

            android:id="@+id/name_saved"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginStart="10dp"
            android:layout_marginTop="10dp"
            android:drawableLeft="@drawable/ic_baseline_access_alarm_24"
            android:drawablePadding="20dp"
            android:padding="15dp"
            android:text="Name"
            android:textColor="#000000"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent"></TextView>

        <TextView
            android:id="@+id/pickup_time_saved"
            android:padding="15dp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="10dp"
            android:layout_marginEnd="10dp"
            android:text="Time"
            android:textColor="#000000"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintTop_toTopOf="parent"></TextView>

    </androidx.constraintlayout.widget.ConstraintLayout>

    <View

        android:layout_width="match_parent"
        android:layout_marginLeft="3dp"
        android:layout_marginRight="3dp"
        android:layout_height="0.5dp"
        android:background="@android:color/darker_gray"/>

    <TextView
        android:textColor="#000000"
        android:id="@+id/pickUpLocation_saved"
        android:layout_marginLeft="10dp"
        android:padding="10dp"
        android:drawablePadding="20dp"
        android:drawableLeft="@drawable/ic_baseline_location_24"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Daska,Panjab"></TextView>
    <TextView
        android:textColor="#000000"
        android:id="@+id/save_trip_Phone_No"
        android:layout_marginLeft="10dp"
        android:padding="10dp"
        android:drawablePadding="20dp"
        android:drawableLeft="@drawable/ic_baseline_call_24"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="03086446306"></TextView>



</LinearLayout>