<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".addNewVehicleActivity">


    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:paddingBottom="20dp"
        tools:context=".addNewVehicleActivity">

        <Button
            android:id="@+id/addnewVehicle_button"
            android:layout_width="320dp"
            android:layout_height="45dp"
            android:layout_marginTop="32dp"
            android:background="@drawable/loginbutton"
            android:elevation="10dp"
            android:text="Add New Vehicle"
            android:textColor="#FFFFFF"
            app:layout_constraintEnd_toEndOf="@+id/textInputLayout1_add_newVehicle4"
            app:layout_constraintStart_toStartOf="@+id/textInputLayout1_add_newVehicle4"
            app:layout_constraintTop_toBottomOf="@+id/textInputLayout1_add_newVehicle4" />

        <Button
            android:id="@+id/backButton_go_to_addNewVehicle"
            android:layout_width="30dp"
            android:layout_height="30dp"
            android:layout_marginStart="10dp"
            android:layout_marginTop="12dp"
            android:background="@drawable/ic_baseline_arrow_back_24"
            android:elevation="10dp"
            android:text=""
            android:textColor="#FFFFFF"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent" />

        <TextView
            android:id="@+id/textView5"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="12dp"
            android:text="Add New Vehicle"
            android:textColor="#000000"
            android:textSize="20dp"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent" />


        <com.google.android.material.textfield.TextInputLayout
            android:id="@+id/textInputLayout1_add_newVehicle2"
            style="@style/Widget.MaterialComponents.TextInputLayout.OutlinedBox.Dense"
            android:layout_width="320dp"
            android:layout_height="50dp"
            android:layout_marginTop="16dp"
            android:hint="Registration No *"
            app:layout_constraintEnd_toEndOf="@+id/textInputLayout1_add_newVehicle32"
            app:layout_constraintHorizontal_bias="0.505"
            app:layout_constraintStart_toStartOf="@+id/textInputLayout1_add_newVehicle32"
            app:layout_constraintTop_toBottomOf="@+id/textInputLayout1_add_newVehicle32">

            <com.google.android.material.textfield.TextInputEditText
                android:id="@+id/reg_no_car"
                android:layout_width="320dp"
                android:layout_height="45dp"
                android:inputType="text"
                android:maxLines="1"
                android:padding="10dp" />
        </com.google.android.material.textfield.TextInputLayout>

        <com.google.android.material.textfield.TextInputLayout
            android:id="@+id/textInputLayout1_add_newVehicle3"
            style="@style/Widget.MaterialComponents.TextInputLayout.OutlinedBox.Dense"
            android:layout_width="320dp"
            android:layout_height="50dp"
            android:layout_marginTop="32dp"
            android:hint="Vehicle Make *"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/textView5">

            <com.google.android.material.textfield.TextInputEditText
                android:id="@+id/makeVehicle_car"
                android:layout_width="320dp"
                android:layout_height="45dp"
                android:inputType="text"
                android:maxLines="1"
                android:padding="10dp" />
        </com.google.android.material.textfield.TextInputLayout>

        <com.google.android.material.textfield.TextInputLayout
            android:id="@+id/textInputLayout1_add_newVehicle30"
            style="@style/Widget.MaterialComponents.TextInputLayout.OutlinedBox.Dense.ExposedDropdownMenu"
            android:layout_width="320dp"
            android:layout_height="50dp"
            android:layout_marginTop="16dp"
            app:layout_constraintEnd_toEndOf="@+id/textInputLayout1_add_newVehicle3"
            app:layout_constraintStart_toStartOf="@+id/textInputLayout1_add_newVehicle3"
            app:layout_constraintTop_toBottomOf="@+id/textInputLayout1_add_newVehicle3">


            <AutoCompleteTextView
                android:id="@+id/type_car"
                android:layout_width="320dp"
                android:layout_height="45dp"
                android:filterTouchesWhenObscured="false"
                android:inputType="none" />

        </com.google.android.material.textfield.TextInputLayout>


        <com.google.android.material.textfield.TextInputLayout
            android:id="@+id/textInputLayout1_add_newVehicle31"
            style="@style/Widget.MaterialComponents.TextInputLayout.OutlinedBox.Dense"
            android:layout_width="320dp"
            android:layout_height="50dp"
            android:layout_marginTop="16dp"
            android:hint="Vehicle Model *"
            app:layout_constraintEnd_toEndOf="@+id/textInputLayout1_add_newVehicle30"
            app:layout_constraintStart_toStartOf="@+id/textInputLayout1_add_newVehicle30"
            app:layout_constraintTop_toBottomOf="@+id/textInputLayout1_add_newVehicle30">


            <com.google.android.material.textfield.TextInputEditText
                android:id="@+id/modelvehicle_car"
                android:layout_width="320dp"
                android:layout_height="45dp"
                android:inputType="text"
                android:maxLines="1"
                android:padding="10dp" />
        </com.google.android.material.textfield.TextInputLayout>

        <com.google.android.material.textfield.TextInputLayout
            android:id="@+id/textInputLayout1_add_newVehicle32"
            style="@style/Widget.MaterialComponents.TextInputLayout.OutlinedBox.Dense.ExposedDropdownMenu"
            android:layout_width="320dp"
            android:layout_height="50dp"
            android:layout_marginTop="16dp"
            app:layout_constraintEnd_toEndOf="@+id/textInputLayout1_add_newVehicle31"
            app:layout_constraintStart_toStartOf="@+id/textInputLayout1_add_newVehicle31"
            app:layout_constraintTop_toBottomOf="@+id/textInputLayout1_add_newVehicle31">

            <AutoCompleteTextView
                android:id="@+id/yearvehicle_car"
                android:layout_width="320dp"
                android:layout_height="45dp"
                android:filterTouchesWhenObscured="false"
                android:inputType="none" />

        </com.google.android.material.textfield.TextInputLayout>


        <com.google.android.material.textfield.TextInputLayout
            android:id="@+id/textInputLayout1_add_newVehicle4"
            style="@style/Widget.MaterialComponents.TextInputLayout.OutlinedBox.Dense"
            android:layout_width="320dp"
            android:layout_height="50dp"
            android:layout_marginTop="16dp"
            android:hint="Color *"
            app:layout_constraintEnd_toEndOf="@+id/textInputLayout1_add_newVehicle5"
            app:layout_constraintStart_toStartOf="@+id/textInputLayout1_add_newVehicle5"
            app:layout_constraintTop_toBottomOf="@+id/textInputLayout1_add_newVehicle5">

            <com.google.android.material.textfield.TextInputEditText
                android:id="@+id/car_color"
                android:layout_width="320dp"
                android:layout_height="45dp"
                android:inputType="text"
                android:maxLines="1"
                android:padding="10dp" />
        </com.google.android.material.textfield.TextInputLayout>

        <com.google.android.material.textfield.TextInputLayout
            android:id="@+id/textInputLayout1_add_newVehicle5"
            style="@style/Widget.MaterialComponents.TextInputLayout.OutlinedBox.Dense"
            android:layout_width="320dp"
            android:layout_height="50dp"
            android:layout_marginTop="16dp"
            android:hint="Vehicle Identification Number (Vin) *"
            app:layout_constraintEnd_toEndOf="@+id/textInputLayout1_add_newVehicle7"
            app:layout_constraintStart_toStartOf="@+id/textInputLayout1_add_newVehicle7"
            app:layout_constraintTop_toBottomOf="@+id/textInputLayout1_add_newVehicle7">

            <com.google.android.material.textfield.TextInputEditText
                android:id="@+id/vin_car"
                android:layout_width="320dp"
                android:layout_height="45dp"
                android:inputType="text"
                android:maxLines="1"
                android:padding="10dp" />
        </com.google.android.material.textfield.TextInputLayout>


        <com.google.android.material.textfield.TextInputLayout
            android:id="@+id/textInputLayout1_add_newVehicle6"
            style="@style/Widget.MaterialComponents.TextInputLayout.OutlinedBox.Dense"
            android:layout_width="320dp"
            android:layout_height="50dp"
            android:layout_marginTop="16dp"
            android:hint="Vehicle Plate # *"
            app:layout_constraintEnd_toEndOf="@+id/textInputLayout1_add_newVehicle2"
            app:layout_constraintStart_toStartOf="@+id/textInputLayout1_add_newVehicle2"
            app:layout_constraintTop_toBottomOf="@+id/textInputLayout1_add_newVehicle2">

            <com.google.android.material.textfield.TextInputEditText
                android:id="@+id/vehicle_PlateNo"
                android:layout_width="320dp"
                android:layout_height="45dp"
                android:inputType="text"
                android:maxLines="1"
                android:padding="10dp" />
        </com.google.android.material.textfield.TextInputLayout>

        <com.google.android.material.textfield.TextInputLayout
            android:id="@+id/textInputLayout1_add_newVehicle7"
            style="@style/Widget.MaterialComponents.TextInputLayout.OutlinedBox.Dense"
            android:layout_width="320dp"
            android:layout_height="50dp"
            android:layout_marginTop="16dp"
            android:hint="Registration Expiration Date *"
            app:layout_constraintEnd_toEndOf="@+id/textInputLayout1_add_newVehicle6"
            app:layout_constraintHorizontal_bias="1.0"
            app:layout_constraintStart_toStartOf="@+id/textInputLayout1_add_newVehicle6"
            app:layout_constraintTop_toBottomOf="@+id/textInputLayout1_add_newVehicle6">


            <com.google.android.material.textfield.TextInputEditText
                android:id="@+id/registrationExpDate_car"
                android:layout_width="320dp"
                android:layout_height="45dp"
                android:inputType="none"
                android:maxLines="1"
                android:clickable="true"
                android:focusableInTouchMode="false"
                android:padding="10dp" />
        </com.google.android.material.textfield.TextInputLayout>


    </androidx.constraintlayout.widget.ConstraintLayout>

</ScrollView>